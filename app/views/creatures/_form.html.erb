
<%= simple_form_for(creature) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div>
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
  <%= f.input :planet_location %>
  <%= f.input :details %>
  <%= f.input :price %>
</div>

<div>
  <%= f.submit %>
</div>

<% end %>
