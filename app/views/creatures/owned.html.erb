<div class="container min-vh-68">
  <h1>My creatures</h1>

  <% if @creatures %>
    <div class="d-flex justify-content-center m-3 flex-wrap">
      <% @creatures.each do |creature| %>
        <div class="container p-3 mx-auto id-card">
          <h1><%= creature.name %></h1>
          <%= cl_image_tag creature.photo.key, height: 300, width: 400, crop: :fill %>
          <h4 class="m-2">Description</h4>
          <p><%= creature.details %></p>

          <div class="d-flex justify-content-around pricing">
            <h4>Â£<%= creature.price %>0 per day</h4>
            <%= link_to "Edit",  edit_creature_path(creature), class:"play-card button" %>
            <%= link_to "Delete", creature_path(creature), class:"play-card button", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
 %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
